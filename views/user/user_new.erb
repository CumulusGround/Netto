
<form class="form form-user" action="/user" method="post">
    <h3 class="form--header">Sign Up</h3>
    
    <input type="email" name="email" placeholder="me@superawesome.com" class="user-input form-user--input" required>
    <input type="password" name="pw" placeholder="password" class="user-input" minLength="8" required>
    <input type="submit" class="form-btn sign-in-btn" value="Sign Up">
    <%# <input type="checkbox" id="Remember me" name="remember" value="Remember me"> %>
    <p class="or">or</p>
    <button class="form-btn">Sign Up with Google</button>
    <button class="form-btn facebook-btn">Sign In with Facebook</button>
    <a href="/" class="form-user--home">Return Home</a>
</form>