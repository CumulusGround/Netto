<p>logged in as <%= user["email"] %></p>

<form action="/session" method="post">
  <input type="hidden" name="_method" value="delete">
  <button class="btn">log out</button>
</form>

<button class="btn"><a href="/card/new">Add</a></button>



<a href="#"><button class="btn">Seach</button></a>

<div class="main-grid">
    <% cards.each do |card| %>
        <a href="/show/<%= card["id"] %>">
            <div class="card card-multiple">

                <img src="<%= card["image"] %>" alt="<%= card["name"] %>'s profile picture">

                <h4><%= card["name"] %></h4>

                <a href="/card/<%= card["id"] %>/edit"><button class="btn">Update</button></a>
            </div>
        </a>
    <% end %>
</div>